<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="v1.matrix.sc.myapplication.view.MatrixActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:elevation="2dp"
            >
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBlack"
                android:text=""
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="2dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/greetingTextMatrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/greetingText"
                android:background="@color/colorBlack"
                android:text=""
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="2dp"/>
        </RelativeLayout>

        <v1.matrix.sc.myapplication.view.widget.MatrixView
            android:id="@+id/matrixView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>
